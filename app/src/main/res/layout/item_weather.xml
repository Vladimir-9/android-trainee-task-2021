<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shape_of_the_weather_item"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_of_the_weather_item"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tw_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tw_humidity"
        app:layout_constraintEnd_toStartOf="@+id/tw_temperature"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tw_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tw_date"
        app:layout_constraintTop_toTopOf="@+id/tw_date"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tw_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tw_description"
        app:layout_constraintStart_toStartOf="@+id/tw_date"
        app:layout_constraintTop_toBottomOf="@+id/tw_date"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tw_speed_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tw_humidity"
        app:layout_constraintTop_toTopOf="@+id/tw_humidity"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tw_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tw_humidity"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>